<div class="content-wrap">
    <div class="mpl-navbar-mobile-overlay"></div>
    <div>
        <section class="mpl-banner mpl-banner-top mpl-banner-parallax">
            <div class="mpl-image" data-speed="0.8">
                <%= image_tag 'background.jpg', class: 'jarallax-img' %>
            </div>
            <div class="mpl-banner-content mpl-box-sm">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                            <div class="mpl-sign-form" data-sr="sign" data-sr-interval="100" data-sr-duration="1000" data-sr-distance="20">
                                <h1 data-sr-item="sign">New Guild</h1>
                                <%= form_with model: @guild do |form| %>
                                    <div class="row hgap-xs vgap-sm align-items-center">
                                        <div class="col-12" data-sr-item="sign">
                                            <%= form.text_field :name, placeholder: 'Name', class: 'form-control', required: true %><span class="form-control-bg"></span>
                                        </div>
                                        <div class="col-12" data-sr-item="sign">
                                            <%= form.text_field :tag, placeholder: 'Tag, without [ ]', class: 'form-control', required: true %><span class="form-control-bg"></span>
                                        </div>
                                        <div class="col-12" data-sr-item="sign">
                                            <%= form.submit 'Create', class: 'btn btn-md btn-block' %>
                                        </div>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%= render 'footer' %>
    </div>
</div>
